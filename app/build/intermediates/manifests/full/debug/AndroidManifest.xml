<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.turkeytech.homelib"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="19"
        android:targetSdkVersion="27" />

    <application
        android:allowBackup="true"
        android:debuggable="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme" >
        <activity android:name="com.turkeytech.homelib.Activities.DefaultActivity" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.turkeytech.homelib.Activities.MainActivity.MainActivity"
            android:label="@string/title_activity_main"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity android:name="com.turkeytech.homelib.Activities.PdfListActivity" />
        <activity android:name="com.turkeytech.homelib.Activities.PdfReaderActivity.PdfReaderActivity" />
        <activity
            android:name="com.turkeytech.homelib.Activities.SettingsActivity.SettingsActivity"
            android:label="@string/title_activity_settings" />
        <activity
            android:name="com.turkeytech.homelib.FullscreenActivity"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:label="@string/title_activity_fullscreen"
            android:theme="@style/FullscreenTheme" />
        <activity android:name="com.turkeytech.homelib.Test" />
    </application>

</manifest>